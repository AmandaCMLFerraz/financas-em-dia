generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String      @id @default(uuid())
  nome       String
  email      String      @unique
  senha_hash String
  Transacoes  Transacao[]

  @@map("usuarios")
}

model TipoTransacao {
  id        String      @id @default(uuid())
  descricao String
  Transacoes Transacao[]

  @@map("tipos_transacoes")
}

model FormaPagamento {
  id        String      @id @default(uuid())
  descricao String
  Transacoes Transacao[]

  @@map("formas_pagamentos")
}

model Categoria {
  id        String      @id @default(uuid())
  descricao String
  Transacoes Transacao[]

  @@map("categorias")
}

model Transacao {
  id         String   @id @default(uuid())
  uduario_id String
  data       DateTime
  valor      Float
  descricao  String?

  usuario    Usuario @relation(fields: [usuario_id], references: [id])
  usuario_id String

  tipo_transacao    TipoTransacao @relation(fields: [tipo_transacao_id], references: [id])
  tipo_transacao_id String

  forma_pagamento    FormaPagamento @relation(fields: [forma_pagamento_id], references: [id])
  forma_pagamento_id String

  categoria    Categoria @relation(fields: [categoria_id], references: [id])
  categoria_id String

  @@map("transacoes")
}
